class Solution:
    def generateTheString(self, n: int) -> str:
        ones, twos, threes = 0, 0, 0
        if(n % 2 == 0):
            ones = n - 1
            twos = 1
        else:
            ones = n
        
        res = ""
        
        res += "a"*ones
        res += "b"*twos
        res += "c"*threes
        
        return res
            